<div class="mx-5 my-10">
	<div class="flex flex-col sm:flex-row sm:items-end sm:justify-between mt-6">
		<span class="font-medium text-lg font-semibold"><%= @categoria.categoria.capitalize %></span>
		<span class="text-sm font-semibold"><%= @tags.size %> Produtos encontrados</span>
	</div>
    <div class="grid 2xl:grid-cols-5 xl:grid-cols-4 lg:grid-cols-3 sm:grid-cols-2 grid-cols-1 gap-x-6 gap-y-12 w-full mt-6">
      <% @tags.each do |tag| %>
        <% produto = Produto.find(tag.produto_id) %>
        <!-- Product Tile Start -->
        <div>
        
          <%= link_to produto, :class => "block h-64 rounded-lg shadow-lg" do %>
            <% image_tag(produto.foto_00, class: "h-64 rounded-lg") %>
          <% end %>
          <div class="flex items-center justify-between mt-3">
            <div>
              <%= link_to(produto.nome, produto) %>
            </div>
            <span class="flex items-center h-8 bg-indigo-200 text-indigo-600 text-sm px-2 rounded">R$ <%= produto.preco_de_venda%></span>
          </div>
        </div>
      <% end %>
	</div>
</div>