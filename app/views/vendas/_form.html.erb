<%= form_with(model: venda) do |form| %>
  <% if venda.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(venda.errors.count, "error") %> prohibited this venda from being saved:</h2>

      <ul>
        <% venda.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :funcionario, class: "sr-only" %>
    <% form.hidden_field :funcionario, value: current_funcionario.id %>
  </div>

  <div class="field">
    <%= form.label :produto %>
    <%= form.search_field :produto %>
  </div>

  <div class="field">
    <%= form.label :perfil %>
    <%= form.search_field :perfil %>
  </div>

  <div class="field">
    <%= form.label :data_pagamento %>
    <%= form.date_field :data_pagamento %>
  </div>

  <div class="field is-grouped">
    <div class="control">
      <%= form.submit 'Create', class: 'button is-link' %>
    </div>
    <div class="control">
      <%= link_to 'Back', vendas_path, class: 'button is-link is-light' %>
    </div>
  </div>

<% end %>