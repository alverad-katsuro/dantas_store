<script src="<%= javascript_path("input_phone.js") %>" async="async" data-turbo-track="reload"></script>
<div class="min-h-full flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <%= image_tag('emblema.png', :class=>"mx-auto h-32 w-auto")%>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Atualizar Dados
      </h2>
    </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), method: :patch, :class=>"mt-8 space-y-6") do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>        
        <%= f.fields_for :perfil, method: :patch do |perfil| %>

        <div class="mb-4 md:flex md:justify-between">
          <div class="mb-4 md:mr-2 md:mb-0">
            <%= perfil.label :nome, :class=> "sr-only" %>
            <%= perfil.text_field :nome, autofocus: true, :class=>"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm",:placeholder=>"Nome" %>
          </div>
          <div>
            <%= perfil.label :sobrenome, :class=> "sr-only" %>
            <%= perfil.text_field :sobrenome, :class=>"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm",:placeholder=>"Sobrenome" %>
          </div>
        </div>
        <div class="mb-6 md:flex md:justify-between">
          <div class="flex-grow">
            <%= perfil.label :telefone, :class=> "sr-only" %>
            <%= perfil.text_field :telefone, :class=>"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm rounded-l-md",:placeholder=>"(00) 00000-0000", :id=>"telefone", maxlength:"15", :value=>'91' %>
          </div>
          <div class="flex-grow">
            <%= perfil.label :sexo, :class=> "sr-only" %>
            <%= perfil.select :sexo, ["Masculino", "Feminino", "Outro", "Prefiro Não Informar"], {}, :class=>"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm rounded-r-md" %>
          </div>
        </div>
        
        <div class="rounded-md shadow-sm -space-y-px">
          <div class="mb-6 md:flex md:justify-between">
            <div class="flex-grow">
              <%= perfil.label :rua, :class=>"sr-only" %>
              <%= perfil.text_field :rua, :class=>"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-l-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm mb-5 mb-0",:placeholder=>"Rua" %>
            </div>
              <div class="flex-grow w-1/6">
                <%= perfil.label :numero, :class=>"sr-only" %>
                <%= perfil.text_field :numero, :class=>"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-r-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm mb-0", :placeholder=>"Número" %>
              </div>
          </div>
          <div class="mb-6 md:flex md:justify-between">
            <div class="flex-grow">
              <%= perfil.label :bairro, :class=>"sr-only" %>
              <%= perfil.text_field :bairro, :class=>"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-l-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm", :placeholder=>"Bairro", :value=>"Barcarena" %>
            </div>
            <div class="flex-grow">
              <%= perfil.label :cidade, :class=>"sr-only" %>
              <%= perfil.text_field :cidade, :class=>"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm", :placeholder=>"Cidade" %><br>
            </div>
            <div class="flex-grow w-2/6">
              <%= perfil.label :estado, :class=>"sr-only" %>
              <%= perfil.text_field :estado, :class=>"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-r-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm", :placeholder=>"Estado", :maxlength=>"2", :value=>"PA" %><br>
            </div>            
          </div>
          <div>
            <%= perfil.label :complemento, :class=>"sr-only"%>
            <%= perfil.text_field :complemento, :class=>"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm mb-5",:placeholder=>"Complemento" %>
          </div>
        </div>
        <% end %>
        <div class="rounded-md shadow-sm -space-y-px">
          <div>
            <%= f.label :email, :class=> "sr-only", :for=>"email-address" %>
            <%= f.email_field :email, autocomplete: "email", :id=>"email-address", :class=>"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm mb-5",:placeholder=>"Email address" %>
          </div>
          <% if @minimum_password_length %>
            <p class="text-center text-sm text-gray-500">Número minimo de caracter - <%= @minimum_password_length %> - deixe em branco caso não queira mudar a senha</p>
          <% end %>
          <div class="mb-4 md:flex md:justify-between">
            <div>
              <%= f.label :password, :for=>"password", :class=>"sr-only" %>
              <%= f.password_field :password, :autocomplete=> "new-password", :autocomplete=>"current-password",  :class=>"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-l-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm", :placeholder=>"Password" %>
            </div>
            <div>
              <%= f.label :password_confirmation, :for=>"password", :class=>"sr-only" %>
              <%= f.password_field :password_confirmation, :autocomplete=> "new-password", :autocomplete=>"current-password",  :class=>"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-r-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm", :placeholder=>"Repeat Password" %><br>
            </div>
          </div>
        </div>
        <div>
            <p class="text-center text-sm text-gray-500">Senha atual</p>

          <%= f.label :current_password, :for=>"password", :class=>"sr-only" %>
          <%= f.password_field :current_password, :autocomplete=> "current_password", :autocomplete=>"current-password",  :class=>"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-r-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm", :placeholder=>"Repeat Password" %><br>
        </div>

        <div class="mb-6 md:flex md:justify-between">
          <div class="flex-grow">
            <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
              <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                <!-- Heroicon name: solid/lock-closed -->
                <svg class="h-5 w-5 text-indigo-500 group-hover:text-indigo-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                </svg>
              </span>
            <%= f.submit "Salvar" %>
            </button>
          </div>
          <div class="flex-grow">
            <%= link_to "Cancelar", @user, class: "ml-2 rounded-lg py-2 px-4 bg-gray-100 inline-block font-medium group relative w-full flex justify-center border border-transparent text-sm hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        </div>
      <% end %>
      <div>
        <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class=>"ml-2 rounded-lg py-2 px-4 bg-red-400 inline-block font-medium group relative w-full flex justify-center border border-transparent text-sm hover:bg-red-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %></p>
      </div>
  </div>
</div>
