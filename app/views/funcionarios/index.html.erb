<div class="bg-gray-100">
    <div class="container mx-auto my-5 p-5">
        <div class="md:flex no-wrap md:-mx-2 ">
            <!-- Left Side -->
            <div class="w-full md:w-3/12 md:mx-2">
                <!-- Profile Card -->
                <div class="bg-white p-3 border-t-4 border-green-400">
                    <% if @funcionario.perfil.avatar.attached? %>
                      <div class="image overflow-hidden">
                        <%= image_tag(@funcionario.perfil.avatar, :class=>"h-auto w-full mx-auto")%>
                      </div>
                    <% else %>
                        <%= image_tag("avatar.ico", :class=>"h-auto w-full mx-auto")%>
                    <% end %>
                    <h1 class="text-gray-900 font-bold text-xl leading-8 mt-10 mb-4"><%= @funcionario.perfil.nome + " " + @funcionario.perfil.sobrenome %></h1>
                    <ul
                        class="bg-gray-100 text-gray-600 hover:text-gray-700 hover:shadow py-2 px-3 mt-3 divide-y rounded shadow-sm">
                        <li class="flex items-center py-3">
                            <span>Cargo</span>
                            <span class="ml-auto"><%= @funcionario.cargo %></span>
                        </li>
                        <li class="flex items-center py-3">
                            <span>Membro desde</span>
                            <span class="ml-auto"><%= (@funcionario.created_at).to_s.split[0] %></span>
                        </li>
                        <li class="flex items-center py-3">
                            <span>Funcionario Ativo</span>
                            <span class="ml-auto"><%= @funcionario.ativo %></span>
                        </li>
                    </ul>
                </div>
                <!-- End of profile card -->
                <div class="my-4"></div>
                
            </div>
            <!-- Right Side -->
            <div class="w-full md:w-9/12 mx-2 h-64">
                <!-- Profile tab -->
                <!-- About Section -->
                <div class="bg-white p-3 shadow-sm rounded-sm">
                    <div class="flex items-center space-x-2 font-semibold text-gray-900 leading-8">
                        <span clas="text-green-500">
                            <svg class="h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                        </span>
                        <span class="tracking-wide">Dados Pessoais</span>
                    </div>
                    <div class="text-gray-700">
                        <div class="grid md:grid-cols-2 text-sm">
                            <div class="grid grid-cols-2">
                                <div class="px-4 py-2 font-semibold">Nome</div>
                                <div class="px-4 py-2"><%= @funcionario.perfil.nome %></div>
                            </div>
                            <div class="grid grid-cols-2">
                                <div class="px-4 py-2 font-semibold">Sobrenome</div>
                                <div class="px-4 py-2"><%= @funcionario.perfil.sobrenome %></div>
                            </div>
                            <div class="grid grid-cols-2">
                                <div class="px-4 py-2 font-semibold">Genero</div>
                                <div class="px-4 py-2"><%= @funcionario.perfil.sexo %></div>
                            </div>
                            <div class="grid grid-cols-2">
                                <div class="px-4 py-2 font-semibold">Contato</div>
                                <div class="px-4 py-2"><%= @funcionario.perfil.telefone %></div>
                            </div>
                            <div class="grid grid-cols-2">
                                <div class="px-4 py-2 font-semibold">Endere√ßo</div>
                                <div class="px-4 py-2"><%= @funcionario.perfil.rua %> <%= @funcionario.perfil.bairro %> <%= @funcionario.perfil.cidade %> <%= @funcionario.perfil.estado %></div>
                            </div>
                            <div class="grid grid-cols-2">
                                <div class="px-4 py-2 font-semibold">Complemento</div>
                                <div class="px-4 py-2"><%= @funcionario.perfil.complemento %></div>
                            </div>
                            <div class="grid grid-cols-2">
                                <div class="px-4 py-2 font-semibold">Email</div>
                                <div class="px-4 py-2">
                                    <a class="text-blue-800" href="<%= @funcionario.email %>"><%= @funcionario.email %></a>
                                </div>
                            </div>
                            <div class="grid grid-cols-2">
                                <div class="px-4 py-2 font-semibold">Data de Nascimento</div>
                                <div class="px-4 py-2"><%= @funcionario.perfil.nascimento %></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="my-4"></div>

                <div class="bg-white p-3 shadow-sm rounded-sm">
                    <div class="flex items-center space-x-2 font-semibold text-gray-900 leading-8">
                        <span clas="text-green-500">
                            <svg class="h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                        </span>
                        <span class="tracking-wide">Dados Administrativos</span>
                    </div>
                    <div class="text-gray-700">
                        <div class="grid md:grid-cols-2 text-sm">
                            <div class="grid grid-cols-2">
                                <div class="px-4 py-2 font-semibold">Banco</div>
                                <div class="px-4 py-2"><%= @funcionario.banco %></div>
                            </div>
                            <div class="grid grid-cols-2">
                                <div class="px-4 py-2 font-semibold">Agencia</div>
                                <div class="px-4 py-2"><%= @funcionario.agencia %></div>
                            </div>
                            <div class="grid grid-cols-2">
                                <div class="px-4 py-2 font-semibold">Conta</div>
                                <div class="px-4 py-2"><%= @funcionario.conta_corrente %></div>
                            </div>
                            <div class="grid grid-cols-2">
                                <div class="px-4 py-2 font-semibold">Salario</div>
                                <div class="px-4 py-2"><%= @funcionario.salario %></div>
                            </div>
                            <div class="grid grid-cols-2">
                                <div class="px-4 py-2 font-semibold">Email</div>
                                <div class="px-4 py-2">
                                    <a class="text-blue-800" href="<%= @funcionario.email %>"><%= @funcionario.email %></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- End of about section -->

                <div class="my-4"></div>

                <!-- Experience and education -->
                <div class="bg-white p-3 shadow-sm rounded-sm">

                    <div class="grid grid-cols-1">
                        <div>
                            <div class="flex items-center space-x-2 font-semibold text-gray-900 leading-8 mb-3">
                                <span clas="text-green-500">
                                    <svg class="h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                        stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                    </svg>
                                </span>
                                <span class="tracking-wide">Vendas</span>
                            </div>
                            <ul class="list-inside space-y-2">
                            <% Venda.find_by_sql("select * from vendas where funcionario_id = #{current_funcionario.id} order by vendas.created_at desc limit 10").each do |venda| %>
                                <li>
                                    <div class="text-teal-600">Vendido para <%= venda.perfil.nome %></div>
                                    <div class="text-gray-500 text-xs"><%= venda.created_at %></div>
                                </li>
                              <% end %>
                            </ul>
                        </div>
                        <div>
                        </div>
                    </div>
                    <!-- End of Experience and education grid -->
                </div>
                <!-- End of profile tab -->
            </div>
        </div>
    </div>
</div>